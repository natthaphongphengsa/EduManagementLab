@page
@model EduManagementLab.Web.Pages.CourseLineItems.DetailsModel
@{
    ViewData["Title"] = "Details";

    <h1>@Model.CourseLineItem.Name</h1>

    <div>
        <div class="row">
            <div class="col-md-7 text-md-left">
                <h4>Course Line Item details</h4>
            </div>
            <div class="col-md-5 text-md-end">
                <form method="post" asp-page-handler="UpdateActive" asp-route-lineItemId="@Model.CourseLineItem.Id" asp-route-courseId="@Model.Course.Id">
                    <div class="form-check form-switch">
                        <input class="form-check-input" style="position:absolute;" onchange="this.form.submit()" type="checkbox" role="switch" aria-checked="true" asp-for="IsChecked" name="IsChecked" value="true" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Active</label> |
                        <a asp-page="./EditCourseLineItemInfo" asp-route-id="@Model.CourseLineItem.Id">Edit courselineitem info</a>
                    </div>
                </form>
            </div>
        </div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseLineItem.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseLineItem.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseLineItem.Active)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseLineItem.Active)
            </dd>
        </dl>
    </div>
    <div class="row justify-content-between">
        <div class="col">
            <h4>Results for this course</h4>
            <span class="text-warning">@ViewBag.error</span>
        </div>
    </div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseLineItem.Results[0].User.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseLineItem.Results[0].User.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseLineItem.Results[0].LastUpdated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseLineItem.Results[0].Score)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CourseLineItem.Results != null)
            {
                <form method="post" id="form__submit" asp-page-handler="UpdateScore" asp-route-lineItemId="@Model.CourseLineItem.Id" asp-route-courseId="@Model.Course.Id">
                    @{
                        @for (int i = 0; i < Model.userScoreList.Count; i++)
                        {
                        <tr>
                            <td>
                                    @Html.DisplayFor(modelItem => @Model.userScoreList[i].Firstname)
                            </td>
                            <td>
                                    @Html.DisplayFor(modelItem => @Model.userScoreList[i].Lastname)
                            </td>
                            <td>
                                    @Html.DisplayFor(modelItem => @Model.userScoreList[i].lastUpdated)
                            </td>
                            <td>
                                <div class="container">
                                    <div class="row justify-content-start">
                                            @if (@Model.userScoreList[i].Score != 0)
                                            {
                                            <div class="col-4">
                                                <input type="text" value="@Model.userScoreList[i].Score" asp-for="@Model.userScoreList[i].Score" />
                                                <input hidden type="text" value="@Model.userScoreList[i].UserId" asp-for="@Model.userScoreList[i].UserId" />
                                                <input hidden type="text" value="@Model.userScoreList[i].LineItemId" asp-for="@Model.userScoreList[i].LineItemId" />
                                            </div>
                                            }
                                            else
                                            {
                                            <div class="col-4">
                                                <input type="text" value="" asp-for="@Model.userScoreList[i].Score" />
                                                <input hidden type="text" value="@Model.userScoreList[i].UserId" asp-for="@Model.userScoreList[i].UserId" />
                                                <input hidden type="text" value="@Model.userScoreList[i].LineItemId" asp-for="@Model.userScoreList[i].LineItemId" />
                                            </div>
                                            }
                                        <div class="col-4">
                                            <div id="RemoveModal-placeholder"></div>
                                            <div>
                                                    @if (@Model.userScoreList[i].Score != 0)
                                                    {
                                                    <button type="button" class="btn btn-danger" data-toggle="ajax-RemoveModal" data-url="@Url.Page("/CourseLineItems/Details", "RemoveScoreModalPartial", new {lineItemId = @Model.userScoreList[i].LineItemId,courseId = @Model.Course.Id, userId = @Model.userScoreList[i].UserId, score = @Model.userScoreList[i].Score} )">
                                                        Remove score
                                                    </button>
                                                    }
                                                    else
                                                    {
                                                    <button type="button" class="btn btn-danger" data-toggle="ajax-RemoveModal" data-url="@Url.Page("/CourseLineItems/Details", "RemoveScoreModalPartial", new {lineItemId = @Model.userScoreList[i].LineItemId,courseId = @Model.Course.Id, userId = @Model.userScoreList[i].UserId, score = @Model.userScoreList[i].Score} )" disabled>
                                                        Remove score
                                                    </button>
                                                    }

                                            </div>
                                        </div>
                                    </div>

                            </td>
                        </tr>
                        }
                    }
                <button class="btn btn-primary justify-content-end" type="submit">Save all</button>
                </form>
            }
            else
            {
                <h4>No results for this course!</h4>
            }
        </tbody>
    </table>
}