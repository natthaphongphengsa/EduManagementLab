<div class="col-md-2 text-md-end">
    <div class="modal fade removemodal" id="remove-score" tabindex="-1" aria-labelledby="remove-score" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="remove-score">Remove result</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-md-start">
                    <p class="text-center">Why do you want to delete this student score?</p>
                    <form method="post" asp-route-score="@ViewBag.score" asp-route-lineItemId="@ViewBag.lineItemId" asp-route-courseId="@ViewBag.courseId" asp-route-userId="@ViewBag.userId" asp-page-handler="RemoveScore" class="text-center">
                        <div class="form-group">
                            <select name="SelectedReason" class="form-select" aria-label="Default select example">
                                <option value="1">Student was removed from this course but the results remain</option>
                                <option value="2">I Set the result to the wrong student</option>
                            </select>
                        </div>
                        <div class="form-group text-center mt-3">
                            <input id="submitValue" class="btn btn-primary" type="submit" value="Delete result" />
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}