@page
@model EduManagementLab.Web.Pages.Students.CourseDetailsModel
@{
}
<h1>@Model.Course.Name</h1>

<div>
    <div class="row">
        <div class="text-left"><h4>Course details</h4></div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.EndDate)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="text-left"><h4>Course Line Items</h4></div>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseLineItems[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseLineItems[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseLineItems[0].Active)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Course.CourseLineItems != null)
        {
            @foreach (var lineItem in Model.Course.CourseLineItems)
            {
                @if (lineItem.Active == true)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => lineItem.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => lineItem.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => lineItem.Active)
                        </td>
                        <td>
                            <a asp-page="../Students/AssignmentDetails" asp-route-lineItemId="@lineItem.Id">Details</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr style="opacity: 0.4;">
                        <td>
                            @Html.DisplayFor(modelItem => lineItem.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => lineItem.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => lineItem.Active)
                        </td>
                    </tr>
                }
            }
        }
        else
        {
            <h4>No Course Line Items for this course</h4>
        }
    </tbody>
</table>


<div>
    <a asp-page="./Index">Back to course list</a>
</div>

@*Validates input without closing modal*@
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}