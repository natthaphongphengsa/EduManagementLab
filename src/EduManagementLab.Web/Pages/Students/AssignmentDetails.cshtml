@page
@model EduManagementLab.Web.Pages.Students.AssignmentDetailsModel
@{
}
<h1>@Model.CourseLineItem.Name</h1>

<div>
    <div class="row">
        <div class="text-left"><h4>Assignment details</h4></div>
    </div>
    <hr />

    <a href="">Link to assignment</a>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseLineItem.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseLineItem.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseLineItem.LastUpdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseLineItem.LastUpdate)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseLineItem.Results.FirstOrDefault(p => p.CourseTaskId == @Model.CourseLineItem.Id).Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseLineItem.Results.FirstOrDefault(p => p.CourseTaskId == @Model.CourseLineItem.Id).Score)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseLineItem.Results.FirstOrDefault(p => p.CourseTaskId == @Model.CourseLineItem.Id).LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseLineItem.Results.FirstOrDefault(p => p.CourseTaskId == @Model.CourseLineItem.Id).LastUpdated)
        </dd>
    </dl>
</div>

@*Validates input without closing modal*@
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}