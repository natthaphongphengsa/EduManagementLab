@page
@model EduManagementLab.Web.Pages.CourseTasks.RemoveCourseTaskModel
@{
    ViewData["Title"] = "Delete Course Task";
}

<h1>Delete Course Task</h1>

<h3>Are you sure you want to delete @Model.courseTaskDto.Name?</h3>
<div>
    <h4>Course Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.courseTaskDto.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.courseTaskDto.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.courseTaskDto.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.courseTaskDto.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.courseTaskDto.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.courseTaskDto.Active)
        </dd>
    </dl>

    <form method="post" asp-route-courseId="@Model.courseId" asp-route-courseTaskId="@Model.courseTaskDto.Id">
        <a href='javascript:history.go(-1)' class="btn btn-primary">Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>
</div>